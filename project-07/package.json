{
  "name": "@yourorg/react-cart-library",
  "version": "1.0.0",
  "description": "A comprehensive React library for shopping cart functionality with standardized UI components",
  "author": "Software Architecture Team <dev@yourorg.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abcdefghuy/MTSE431179_QUATRINH/tree/main/project-07"
  },
  "bugs": {
