  },
  "keywords": [
    "react",
    "cart",
    "shopping-cart",
    "ui-components",
    "library",
    "e-commerce",
    "typescript",
    "hooks",
    "context"
  ],
  "type": "module",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
